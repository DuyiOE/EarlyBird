<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Zustand, während des drückens. Geometrische Form mit runden Ecken, Schwarzem Rahmen und Verlauf -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#000000" />

            <gradient android:angle="-90" android:color="#000000" />
        </shape>
    </item>


    <!-- Zustand NICHT gedrückt. Mit drawable -->
    <item android:state_checked="false" android:drawable="@drawable/icon_public" />
</selector>