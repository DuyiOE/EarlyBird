<resources>

    <!--Base application Theme-->
    <style name="base" parent="Base.Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:autoText">true</item>
        <item name="android:background">@color/eb_white</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="UITextRegular" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="UITextRegularInverted" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="UIDayButtonText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">11sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PlacePickerTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

</resources>
