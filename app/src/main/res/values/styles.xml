<resources>

    <!--Base application Theme-->
    <style name="base" parent="Base.Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:autoText">true</item>
        <item name="android:background">@color/eb_white</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="UITextRegular" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="UITextRegularInverted" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="UIDayButtonText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">11sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PlacePickerTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
    <style name="OOSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#06d80d</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#e95454</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/eb_red</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark_nodisable</item>
        <item name="android:windowBackground">@android:color/holo_blue_dark</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EBCompactLight" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/accent_material_light_1</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:colorForeground">@android:color/holo_red_dark</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="android:textColorSecondaryInverse">@color/eb_yellow</item>
    </style>


</resources>
